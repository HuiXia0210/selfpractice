%%writefile practice4e.cpp
#include <iostream>
using namespace std;

int main()
{
  int apples;

  apples = 20;
  cout << "Today we sold " << apples << " bushels of apples.\n";
  return 0;
}

%%shell
g++ practice4e.cpp -o practice4e.elf
./practice4e.elf
