%%writefile practice1.cpp
#include <iostream>
using namespace std;

int main()
{
  cout << "Hello World! Awesome, this is my firsy C++ program!\n";
  getchar();
  return 0;
}

%%shell

g++ practice1.cpp -o practice1.elf
./practice1.elf

--------------------------------------

%%writefile practice2.cpp
#include <iostream>
using namespace std;

int main()
{
  string name;
  string city;

  cout << "Please enter your full name: ";
  getline(cin, name);
  cout << "Enter the city you live: ";
  getline(cin,city);

  cout << "Hello, " << name << endl;
  cout << "You live in " << city << endl;
  return 0;
}

%%shell

g++ practice2.cpp -o practice2.elf
./practice2.elf
--------------------------------------
%%writefile practice3.cpp
#include <iostream>
using namespace std;

int main()
{
  int x = 25;
  int * ptr = nullptr;

  ptr = &x;
  cout << "The value in x is " << x << endl;
  cout << "The value pointed by ptr is " << *ptr << endl;
  return 0;
}

%%shell
g++ practice3.cpp -o practice3.elf
./practice3.elf

-------------------------------------

